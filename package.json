{
  "name": "@schibstedspain/rosetta",
  "version": "2.0.1",
  "description": "plugable I18N library for Node and Browser",
  "main": "lib/",
  "scripts": {
    "prepublish": "rimraf ./lib && npm run dist",
    "dist": "npm run dist:js",
    "dist:js": "babel src --out-dir lib",
    "dist:js:watch": "npm run dist:js -- --watch",
    "predev": "rimraf docs/bundle.js && touch docs/bundle.js",
    "dev": "npm run dev:js:watch & npm run dev:server",
    "dev:js:watch": "watchify -t babelify docs/index.js -o docs/bundle.js",
    "dev:server": "serve ./docs -p 8080",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "karma start --single-run",
    "test:browser:watch": "karma start",
    "test:node": "mocha --compilers js:babel/register --recursive",
    "test:node:watch": "npm run test:node -- -w",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint --ext=\".js\" src/",
    "predoc": "browserify -t babelify docs/index.js -o docs/bundle.js",
    "doc": "npm run doc:build",
    "doc:build": "gh-pages -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SUI-Components/rosetta.git"
  },
  "keywords": [
    "i18n",
    "plugins",
    "browser",
    "nodejs"
  ],
  "pre-commit": [
    "lint",
    "test"
  ],
  "author": "Carlos Villuendas <carlosvillu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SUI-Components/rosetta/issues"
  },
  "homepage": "https://github.com/SUI-Components/rosetta#readme",
  "devDependencies": {
    "@schibstedspain/frontend-pre-commit-rules": "^5.0.0",
    "babel": "^5.6.14",
    "babel-eslint": "~3.1.14",
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "chai": "^2.3.0",
    "chai-as-promised": "^5.1.0",
    "esdoc": "^0.1.3",
    "eslint": "^0.24.1",
    "eslint-plugin-react": "^2.7.0",
    "gh-pages": "^0.3.1",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-chrome-launcher": "^0.1.8",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-spec-reporter": "0.0.19",
    "mocha": "^2.2.4",
    "opener": "^1.4.1",
    "react-dom": "^0.14.0-rc1",
    "rimraf": "^2.4.2",
    "sassify": "^0.9.1",
    "serve": "^1.4.0",
    "sinon": "^1.15.4",
    "watchify": "^3.3.0"
  },
  "dependencies": {
    "node-polyglot": "^0.4.3",
    "react": "^0.14.0-rc1"
  }
}
